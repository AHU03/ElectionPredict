<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:ElectionPredictFinal"
       xmlns:local1="clr-namespace:ElectionPredictFinal.Pages"
       x:Class="ElectionPredictFinal.Pages.AppShellPage"
       Shell.NavBarIsVisible="False">

    <TabBar>
        <Tab Title="Wahldaten" Icon="Wahlresultate_icon.png">
            <ShellContent Shell.TabBarBackgroundColor="#000000" Shell.TabBarTitleColor="FloralWhite">
                <local1:DataViewer/>
            </ShellContent>
        </Tab>
        <Tab Title="Partei-Parolen" Icon="Partei-Parolen_icon.png">
            <ShellContent Shell.TabBarBackgroundColor="#000000" Shell.TabBarTitleColor="FloralWhite">
                <local1:PartyInfluence/>
            </ShellContent>
        </Tab>
        <Tab Title="Modell" Icon="Vorhersagemodell_icon.png">
            <ShellContent Shell.TabBarBackgroundColor="#000000" Shell.TabBarTitleColor="FloralWhite">
                <local1:PredictionModel/>
            </ShellContent>
        </Tab>
    </TabBar>
</Shell>